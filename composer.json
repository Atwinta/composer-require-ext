{
    "name": "lira/composer-ext",
    "type": "composer-plugin",
    "description": "This Composer plugin adds \"require-ext\" command which makes using of private repositories and packages smoother.",
    "keywords": [
        "composer-plugin",
        "private-repository",
        "require"
    ],
    "homepage": "https://github.com/Atwinta/composer-require-ext",
    "license": "MIT",
    "authors": [
        {
            "name": "lira",
            "email": "puls@yandex.ru"
        }
    ],
    "require": {
        "php": ">=5.6",
        "composer-plugin-api": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Lira\\ComposerExt\\": "src"
        }
    },    
    "extra": {
        "class": "Lira\\ComposerExt\\Plugin"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    }
}
